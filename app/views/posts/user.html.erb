

<div class="main">
<% @posts.each do |post| %>
    <div class="card shadow">
    <div class="card-header">
    <img class="avatar" src=<%= post.user.image%> alt="Card image cap">
    <%= post.user.username %>
    </div>
  <img class="card-img-top rounded-0" src=<%= post.img%> alt="Card image cap">
  <div class="card-body d-flex flex-row justify-content-between">
    <div>
    <a href="<%= posts_like_path(post) %>" data-method="post" ><%= image_tag "like.svg", :class => "like" %></a>
    <%= post.likes.count %>
    </div>
    <%if current_user && current_user.id == post.user_id%>
            <div class="dropdown">
            <button class="btn btn-secondary dropdown-toggle"
                    type="button" id="dropdownMenu1" data-toggle="dropdown"
                    aria-haspopup="true" aria-expanded="false">
                Options
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenu1">
                <a class="dropdown-item" href="<%= posts_edit_path(post)%>">Edit</a>
                <a class="dropdown-item" href="<%=posts_destroy_path(post)%>" data-method="delete">Destroy</a>
            </div>
            </div>
    <%end%>
  </div>
</div>
<br />
<% end %>

</div>